{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "npm install --legacy-peer-deps",
        "buildCommand": "set NODE_OPTIONS=--openssl-legacy-provider && npm run build"
      }
    }
  ],
  "env": {
    "NODE_OPTIONS": "--openssl-legacy-provider"
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}